<%= form_tag do %>
  <div class="form-group">
    <%= label_tag :email_address %>
    <%= text_field_tag :email_address, params[:email_address], :class => 'form-control', :maxlength => '100', :required => true, :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}' %>
  </div>

  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, params[:password], :class => 'form-control', :required => true %>
  </div>

  <%= submit_tag 'Login', :class => 'btn btn-default' %>
<% end %>

